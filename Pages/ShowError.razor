@page "/ShowError/{ex}"
@using FssRedact.Services;
@using FssRedact.Models;
@using System.Globalization;
@inject UserService UserService
@inject DialogService DialogService



<RadzenStack Gap="1.5rem">
    @if (ex != null)
    {
        <RadzenLabel>@ex.Message</RadzenLabel>
    }
    else
    {
        <RadzenLabel>Произошла неизвестная ошибка.</RadzenLabel>
    }
</RadzenStack>

@code {
    [Parameter] public Exception? ex { get; set; }
}
